#set array "chd"
chd: ndarray=np.array([1.03,1.07,1.11,1.17,1.23,1.32,1.42,1.55,1.72,1.94])
#import module matplot.pyplot
import matplotlib.pyplot as plt
#define list sizes
sizes = [10,30,50,70,80,110,140,180,220,300]
#draw scatter plot and change the size and color
plt.scatter(paternal_age,chd,s=sizes,color=['red'])
#show the plot
plt.show()

